<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dk.barcocktails.ui.signin.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_cocktailsFragment"
            app:destination="@id/cocktails_list"
            app:launchSingleTop="true"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/cocktails_list"
        android:name="com.dk.barcocktails.ui.cocktails.CocktailsFragment"
        android:label="@string/cocktails"
        tools:layout="@layout/fragment_cocktails">
        <action
            android:id="@+id/action_cocktails_list_to_newCocktailFragment"
            app:destination="@id/newCocktailFragment"
            app:enterAnim="@anim/new_cocktail_enter"
            app:exitAnim="@anim/new_cocktail_exit"
            app:popEnterAnim="@anim/new_cocktail_enter"
            app:popExitAnim="@anim/new_cocktail_exit" />
        <action
            android:id="@+id/action_cocktails_list_to_cocktailDetailsFragment"
            app:destination="@id/cocktailDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.dk.barcocktails.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profile_to_writeToDeveloperDialogFragment"
            app:destination="@id/writeToDeveloperDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/newCocktailFragment"
        android:name="com.dk.barcocktails.ui.newcocktail.NewCocktailFragment"
        android:label="@string/add_cocktail"
        tools:layout="@layout/fragment_new_cocktail" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.dk.barcocktails.ui.signup.SignUpFragment"
        android:label="@string/sign_up" />
    <dialog
        android:id="@+id/cocktailDetailsFragment"
        android:name="com.dk.barcocktails.ui.detail.CocktailDetailsFragment"
        android:label="fragment_cocktail_details"
        tools:layout="@layout/fragment_cocktail_details" />
    <dialog
        android:id="@+id/writeToDeveloperDialogFragment"
        android:name="com.dk.barcocktails.ui.message.WriteToDeveloperDialogFragment"
        android:label="WriteToDeveloperDialogFragment" />
</navigation>